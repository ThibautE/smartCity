<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.smart.thibaut.smartcity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/commerce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/menu2"
            android:onClick="goToCommerceActivity"
            android:text="Commerces"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="348dp" />

        <Button
            android:id="@+id/news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/menu1"
            android:onClick="goToNewsActivity"
            android:text="@string/actualites"
            android:textColor="@color/menu3"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="112dp" />

        <Button
            android:id="@+id/social"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/menu3"
            android:onClick="goToSocialActivity"
            android:text="@string/soc"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="214dp"
            tools:layout_editor_absoluteY="111dp" />

        <Button
            android:id="@+id/pub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/menu4"
            android:onClick="goToPubActivity"
            android:text="@string/bp"
            android:textColor="@color/menu3"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="348dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
